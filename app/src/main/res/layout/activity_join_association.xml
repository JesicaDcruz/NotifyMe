<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".joinAssociation">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_myfiles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4CAAF7"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <LinearLayout
            android:id="@+id/ll_assoc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="vertical">

        <Spinner
                android:id="@+id/spnr_assoc"
                style="@android:style/Widget.DeviceDefault.Light.Spinner"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/spinner_round"
                android:spinnerMode="dropdown" />

        <Button
                android:id="@+id/btn_join"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/button1_bg_round"
                android:onClick="join_assoc"
                android:text="Sign Me Up"
                android:textSize="18sp"
                android:textStyle="normal" />

    </LinearLayout>




</RelativeLayout>