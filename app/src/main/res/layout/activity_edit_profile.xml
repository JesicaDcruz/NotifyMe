<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E3F2FD"
        tools:context=".Edit_profile">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_editprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4CAAF7"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ScrollView
            android:id="@+id/scroll_details"
            style="@android:style/Widget.DeviceDefault.ScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="55dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:scrollbarStyle="insideInset">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/txtvw_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="User ID"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            <EditText
                    android:id="@+id/edittxt_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:enabled="false"
                    android:textColor="#0C0C0C"
                    android:textSize="14sp" />

            <TextView
                    android:id="@+id/txtvw_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="Username"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            <EditText
                    android:id="@+id/edittxt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:enabled="false"
                    android:textColor="#0C0C0C"
                    android:textSize="14sp" />

            <TextView
                    android:id="@+id/txt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="Email ID"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            <EditText
                    android:id="@+id/edittxt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:enabled="false"
                    android:inputType="textEmailAddress"
                    android:textColor="#0C0C0C"
                    android:textSize="14sp" />

            <TextView
                    android:id="@+id/txt_mob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="Contact No."
                    android:textSize="14sp"
                    android:textStyle="bold" />

            <EditText
                    android:id="@+id/edittxt_mob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:inputType="number"
                    android:textSize="14sp" />

            <TextView
                    android:id="@+id/txt_dep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="Department"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            <EditText
                    android:id="@+id/edittxt_dep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:enabled="false"
                    android:textColor="#0C0C0C"
                    android:textSize="14sp" />

            <TextView
                    android:id="@+id/txt_cour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="Course"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            <Spinner
                    android:id="@+id/spnr_cour"
                    style="@android:style/Widget.DeviceDefault.Light.Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="2dp"
                    android:spinnerMode="dropdown" />


            <TextView
                    android:id="@+id/txt_sem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="Semester"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            <Spinner
                    android:id="@+id/spnr_sem"
                    style="@android:style/Widget.DeviceDefault.Light.Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="2dp"
                    android:spinnerMode="dropdown" />


            <Button
                    android:id="@+id/btn_save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button1_bg_round"
                    android:gravity="center"
                    android:onClick="update_details"
                    android:text="SAVE"
                    android:textSize="18sp"
                    android:textStyle="bold" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>